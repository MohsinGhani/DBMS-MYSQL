CREATE DATABASE airline;
USE airline;

CREATE TABLE planes(planeID INT AUTO_INCREMENT, PRIMARY KEY(planeID), modalName VARCHAR(20), aircraftType VARCHAR(30), engineType VARCHAR(30), acCategory VARCHAR(20), numberOfSeats VARCHAR(30));

CREATE TABLE flights(flightID INT AUTO_INCREMENT, PRIMARY KEY(flightID), flightName VARCHAR(20), flightCity VARCHAR(20), flightCountry VARCHAR(30), destinationAirport VARCHAR(30), currentAirport VARCHAR(30), flightTime TIME, flightDate DATE, availableSeats VARCHAR(20), planeID INT, foreign key(planeID) references planes(planeID));
SELECT * FROM flights;

CREATE TABLE pilots_flights(id INT auto_increment, primary key(id), flightID INT, foreign key(flightID) references flights(flightID), p1ID INT, foreign key(pilot1ID) references pilots(pilotID), pilot2ID INT, foreign key(pilot2ID) references pilots(pilotID));

CREATE TABLE pilots(pilotID INT auto_increment, primary key(pilotID), name VARCHAR(30), address varchar(50), contact varchar(20))
